{
  "rules": {
    "users": {
      "$uid": {
        ".validate": "newData.hasChildren(['emergency', 'profile'])",
        "emergency": {
          ".validate": "newData.hasChildren(['status'])",
          "status": {
            ".validate": "newData.isBoolean()"
          },
          "events": {
            "$key1": {
              ".validate": "newData.hasChildren()",
              "tracking": {
                "$key2": {
                  ".validate": "newData.hasChildren(['lat', 'long'])",
                  "lat": {
                    ".validate": "newData.isNumber()"
                  },
                  "long": {
                    ".validate": "newData.isNumber()"
                  },
                  "$other": {
                    ".validate": "false"
                  },
                  ".read": "true"
                },
                ".validate": "newData.hasChildren()"
              },
              "$other": {
                ".validate": "false"
              },
              ".read": "true"
            },
            ".validate": "newData.hasChildren()"
          },
          "$other": {
            ".validate": "false"
          },
          ".read": "true",
          ".write": "true"
        },
        "profile": {
          ".validate": "newData.hasChildren(['name', 'email', 'phone', 'emailNotifications', 'phoneNotifications'])",
          "name": {
            ".validate": "newData.isString()"
          },
          "email": {
            ".validate": "newData.isString()"
          },
          "phone": {
            ".validate": "newData.isString()"
          },
          "emailNotifications": {
            ".validate": "newData.isBoolean()"
          },
          "phoneNotifications": {
            ".validate": "newData.isBoolean()"
          },
          "$other": {
            ".validate": "false"
          }
        },
        "members": {
          "$key3": {
            ".validate": "newData.hasChildren(['name', 'phone', 'email', 'done'])",
            "name": {
              ".validate": "newData.isString()"
            },
            "phone": {
              ".validate": "newData.isString()"
            },
            "email": {
              ".validate": "newData.isString()"
            },
            "done": {
              ".validate": "newData.isBoolean()"
            },
            "$other": {
              ".validate": "false"
            }
          },
          ".validate": "newData.hasChildren()"
        },
        "$other": {
          ".validate": "false"
        },
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "police": {
      ".validate": "newData.hasChildren(['name', 'email', 'phone'])",
      "name": {
        ".validate": "newData.isString()"
      },
      "email": {
        ".validate": "newData.isString()"
      },
      "phone": {
        ".validate": "newData.isString()"
      },
      "$other": {
        ".validate": "false"
      },
      ".read": "true"
    }
  }
}
