{
  "rules": {
    "users": {
      "$uid": {
        ".validate": "newData.hasChildren(['profile'])",
        "profile": {
          ".validate": "newData.hasChildren(['name', 'email', 'phone', 'emailNotifications', 'phoneNotifications'])",
          "name": {
            ".validate": "newData.isString()"
          },
          "email": {
            ".validate": "newData.isString()"
          },
          "phone": {
            ".validate": "newData.isString()"
          },
          "emailNotifications": {
            ".validate": "newData.isBoolean()"
          },
          "phoneNotifications": {
            ".validate": "newData.isBoolean()"
          },
          "$other": {
            ".validate": "false"
          }
        },
        "members": {
          "$key1": {
            ".validate": "newData.hasChildren(['name', 'phone', 'email', 'done'])",
            "name": {
              ".validate": "newData.isString()"
            },
            "phone": {
              ".validate": "newData.isString()"
            },
            "email": {
              ".validate": "newData.isString()"
            },
            "done": {
              ".validate": "newData.isBoolean()"
            },
            "$other": {
              ".validate": "false"
            }
          },
          ".validate": "newData.hasChildren()"
        },
        "$other": {
          ".validate": "false"
        },
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "police": {
      ".validate": "newData.hasChildren(['name', 'email', 'phone'])",
      "name": {
        ".validate": "newData.isString()"
      },
      "email": {
        ".validate": "newData.isString()"
      },
      "phone": {
        ".validate": "newData.isString()"
      },
      "$other": {
        ".validate": "false"
      },
      ".read": "true"
    }
  }
}
